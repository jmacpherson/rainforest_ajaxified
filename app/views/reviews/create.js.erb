<% if @review.errors.any? %>
  $("#review-form-errors").html("<%= escape_javascript(render(:partial => 'products/review_form_errors')) %>");
<% else %>
  $("#review-form-errors").html("")
  $('#review-display').append("<%= escape_javascript(render(:partial => 'products/review')) %>");
  $('#new_review')[0].reset();
<% end %>